<% if user_signed_in? %>
  <% if current_user.admin? %>
  	<h1>Editing Plant</h1>

		<%= render 'form' %>

		<%= link_to 'Show', @plant %> |
		<%= link_to 'Back', plants_path %>
	<% end %>
<% else %>
	<h2>You're not an administrator!</h2>
	<p>Head back to the <%= link_to 'Plants Page', plants_path %>...</p>
<% end %>
