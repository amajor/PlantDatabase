<div class="box">
	<%= link_to (image_tag share.image(:medium)), share %>
	<p class="description">
		<%= share.description %>
	</p>
	<p>
		<strong>
			Posted by <%= link_to share.user.name, share.user %>
		</strong>
	</p>
	<% if share.comment? %>
		<p>
			<strong>The Grower Says...</strong><br/>
		  <%= share.comment %>
		</p>
	<% end %>	
	<% if current_user == share.user %>
		<p>
			<%= link_to 'Edit', edit_share_path(share) %> | 
			<%= link_to 'Delete', share, method: :delete, data: { confirm: 'Are you sure? This post will be permanently deleted.' } %>
		</p>
	<% end %>

	<% if user_signed_in? && current_user.admin? %>
    <p>
      <%= link_to 'Admin Comment', edit_share_path(share) %> | 
      <%= link_to 'Admin Delete', share, method: :delete, data: { confirm: 'Are you sure? This will permanently delete the plant.' } %>
    </p>
  <% end %>

</div>