<%= simple_form_for(@share, html: { class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :comment, label: "Comment or Explanation", as: :text, input_html: { rows: "6" } %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
